
  <view class="details" style="height:{{windowHeight}}px;width:750rpx;">
     <!-- 音频图标 -->
    <view class="record" bindtap="recordPlay"  wx:if="{{recordUrl!=''}}">
      <image src="https://om83cysj8.qnssl.com/%E5%BD%95%E9%9F%B3%E6%9C%BA%20%281%29.png" style="width:50%;height:50%">
      </image>
    </view>
    <!-- 音乐图标 -->
    <view style="animation-play-state:{{musicState}}" class="music" bindtap="toggleMusic">
      <image src="https://om83cysj8.qnssl.com/Note_de_musique_music_256px_525366_easyicon.net.png" style="width:50%;height:50%">
      </image>
    </view>
      <view class="content">
        <!-- 祝福语 -->
        <view class="text">
		  <view style=""> 
			  <block wx:for="{{text}}" wx:for-index="index" wx:for-item="item" wx:key="index">
 				<view>{{item}}</view>
			  </block>
			</view>
        </view>
      </view>
   
  </view>